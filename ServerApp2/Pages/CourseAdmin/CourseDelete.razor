@page "/Course/Delete/{id}"
@using Microsoft.EntityFrameworkCore
@using ServerApp2.Models
@inject NavigationManager _navigation
@inject ApplicationDbContext _context

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@course.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@course.Description</dd>
        <dt class="col-sm-2">Fee</dt>
        <dd class="col-sm-10">@course.Fee</dd>
    </dl>

    <form method="post">
        <input type="hidden" @bind="course.Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a href="Index">Back to List</a>
    </form>
</div>

@code {
    private Course course = new Course();

    [Parameter]
    public Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (_context.Courses != null)
        {
            course = await _context.Courses.FirstOrDefaultAsync(m => m.Id == Id);
        }
    }

    private async Task DeleteCourse()
    {
        if (course != null)
        {
            _context.Courses.Remove(course);
            await _context.SaveChangesAsync();
        }
        _navigation.NavigateTo("Course");
    }
}
