    @page "/Course/{ID:guid}"
    @using Microsoft.EntityFrameworkCore
    @inject ApplicationDbContext _context

    <h1>Details</h1>

    @if (course != null)
    {
        <div>
            <h4>Course</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@course.Name</dd>
                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@course.Description</dd>
                <dt class="col-sm-2">Fee</dt>
                <dd class="col-sm-10">@course.Fee</dd>
            </dl>
        </div>
        <div>
            <a href="Edit/@course.Id">Edit</a> |
            <a href="Index">Back to List</a>
        </div>

        <h4>Enrolled Users</h4>
        <ul>
            @foreach (var user in _context.CourseUsers.Select(uc => uc.User))
            {
                <li>@user.UserName</li>
            }
        </ul>
    }

    @code {
        private Course? course = new Course();

        [Parameter]
        public Guid ID { get; set; }

        protected override async Task OnInitializedAsync()
        {
        }
    }